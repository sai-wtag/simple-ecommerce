<h1>Items</h1>

<table border = "2">
  <tr>
    <th>Id</th>
    <th>Item Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Available Quantity</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= item.available_quantity %></td>
    </tr>
  <% end %>
</table>

<br>
<% if can? :manage, @items %>
  <%= link_to "Create New Item", new_item_path %>
<% end %>
