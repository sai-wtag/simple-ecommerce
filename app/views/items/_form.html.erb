<%= form_with model: item do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <% item.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>      

  <div>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <% item.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
