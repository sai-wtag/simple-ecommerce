<%= form_with model: order do |f| %>
  <table>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
    </tr>
    <% @items.each do |product| %>
      <tr>
          <td>
            <%= product.name %>
          </td>
          <td>
          <%= f.hidden_field :item_ids, multiple: true, value: product[:id], name: "order[item_ids][]" %>
          <%= f.number_field :quantities, name: "order[quantities][]", value: 0 %>
          </td>
      </tr>
    <% end %>
  </table>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<style>
  .form {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form__group {
    display: flex;
    flex-direction: row;
    gap: 1rem;
  }

  .form__label {
    font-weight: bold;
    width: 5rem;
  }

  .form__input {
    width: 10rem;
  }

  .form__error {
    color: red;
  }
</style>