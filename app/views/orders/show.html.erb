<h1> Order #<%= @order.id %> </h1>

<table>
    <tr>
        <th> Item </th>
        <th> Price (BDT) </th>
        <th> Quantity </th>
        <th> Total Price (BDT) </th>
    </tr>
    <% @order.order_items.each do |order_item| %>
        <tr>
            <td>
                <%= order_item.item.name %>
            </td>
            <td class="price">
                <%= order_item.price %>
            </td>
            <td>
                <%= order_item.quantity %>
            </td>
            <td class="price">
                <%= order_item.price * order_item.quantity %>
            </td>
        </tr>
    <% end %>
    <tr>
        <th colspan="3" class="price"> Total Price (BDT) </th>
        <th class="price"> <%= @order.total_price %> </th>
    </tr>
</table>

<a href="<%= request.referer %>">Go Back</a>

<style>
  .price {
    text-align: right;
  }

  table, td, th {
    border: 1px solid black;
    border-collapse: collapse;
  }

  td, th {
    padding: 4px;
  }
</style>